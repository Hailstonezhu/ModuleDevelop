<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. parent="AppBaseTheme" -->
    <style name="AppTheme" parent="android:Theme.Holo.NoActionBar">

        <!-- .Holo  All customizations that are NOT specific to a particular API-level can go here. -->

        <item name="android:windowNoTitle">false</item>
        <item name="android:windowTitleSize">20dip</item>
        <!--
         <item name="android:windowTitleSize">50dp</item>
         <item name="android:icon">@drawable/ic_launcher</item>
        -->
    </style>

    <style name="spinnerstyle">
        <item name="android:background">@drawable/clr_normal</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">#ff222222</item>
        <item name="android:popupBackground">#FFFFFFFF</item>
    </style>

</resources>